                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Coordinator" asp-action="Dashboard">
                                        <i class="bi bi-eye me-1"></i> Coordinator
                                    </a>
                                </li>
                            }

                            <!-- Manager View (Only for Managers and Admins) -->
                            @if (User.IsInRole("Manager") || User.IsInRole("Administrator"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Manager" asp-action="Dashboard">
                                        <i class="bi bi-star me-1"></i> Manager
                                    </a>
                                </li>
                            }

                            <!-- Admin Features (Only for Administrators) -->
                            @if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-gear me-1"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="SystemStats">
                                                <i class="bi bi-graph-up me-2"></i> System Statistics
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Admin" asp-action="Users">
                                                <i class="bi bi-people me-2"></i> User Management
