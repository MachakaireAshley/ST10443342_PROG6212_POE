@model List<CMCS.Controllers.UserViewModel>
@{
    ViewData["Title"] = "User Management";
}

<div class="row">
    <div class="col-md-12">
        <h1>User Management</h1>
        <p class="text-muted">Manage system users and their roles</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">All Users</h5>
        <a asp-action="CreateUser" class="btn btn-primary">
            <i class="bi bi-person-plus me-1"></i> Add New User
        </a>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">No users found in the system.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Hourly Rate</th>
                            <th>Date Registered</th>
                            <th>System Roles</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@user.FirstName @user.LastName</strong>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge
                                     @(user.Role == CMCS.Models.UserRole.AcademicManager ? "bg-danger" :
                                       user.Role == CMCS.Models.UserRole.ProgramCoordinator ? "bg-warning" :
                                        "bg-info")">
                                @user.Role
                            </span>
                        </td>
                        <td>
                            @if (user.Role == CMCS.Models.UserRole.Lecturer)
                                    {
                                        <text>R @user.HourlyRate.ToString("N2")</text>
                                    }
                                    else
                                    {
                                        <text>-</text>
                                    }
                                </td>
                                <td>@user.DateRegistered.ToString("yyyy-MM-dd")</td>
                                <td>
                                    @foreach (var role in user.AspNetRoles)
                                    {
                                        <span class="badge bg-secondary me-1">@role</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form asp-action="DeleteUser" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete user @user.Email?');">
                                            <input type="hidden" name="id" value="@user.Id" />
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h5 class="mb-0">Role Legend</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <span class="badge bg-danger">AcademicManager</span>
                <small class="text-muted d-block">System Administrators</small>
            </div>
            <div class="col-md-3">
                <span class="badge bg-warning">ProgramCoordinator</span>
                <small class="text-muted d-block">Claim Coordinators</small>
            </div>
            <div class="col-md-3">
                <span class="badge bg-info">Lecturer</span>
                <small class="text-muted d-block">Teaching Staff</small>
            </div>
        </div>
    </div>
</div>